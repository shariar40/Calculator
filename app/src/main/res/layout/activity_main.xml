<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="4dp"
    android:background="@drawable/img"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="100sp"
        android:text="Calculator"
        android:textColor="#C9BD9B"
        android:textSize="50sp"
        android:textStyle="italic" />

    <EditText
        android:id="@+id/firstNumber"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginHorizontal="22sp"
        android:layout_marginTop="40sp"
        android:background="#E8E7E7"
        android:gravity="center"
        android:hint="Enter first number"
        android:inputType="numberDecimal"
        android:padding="10sp"
        android:textColor="#AE2929"
        android:textColorHint="#6BB56E"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/secondNumber"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginHorizontal="22sp"
        android:layout_marginTop="15sp"
        android:background="#C7D7C8"
        android:gravity="center"
        android:hint="Enter second number"
        android:inputType="numberDecimal"
        android:padding="10sp"
        android:textColor="#AF4B4B"
        android:textColorHint="#7BA29F"
        android:textSize="20sp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="30sp"
        android:orientation="horizontal"
        android:paddingTop="30sp"
        android:weightSum="4">

        <Button
            android:id="@+id/sumButtonID"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="1sp"
            android:layout_weight="1"
            android:backgroundTint="#3F5AEC"
            android:onClick="myButton"
            android:text="+"
            android:textColor="#ffffff"
            android:textSize="30sp" />

        <Button
            android:id="@+id/subButtonID"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="1sp"
            android:layout_weight="1"
            android:backgroundTint="#3F5AEC"
            android:onClick="myButton"
            android:text="-"
            android:textColor="#ffffff"
            android:textSize="30sp" />

        <Button
            android:id="@+id/mulButtonID"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="1sp"
            android:layout_weight="1"
            android:backgroundTint="#3F5AEC"
            android:onClick="myButton"
            android:text="*"
            android:textColor="#ffffff"
            android:textSize="30sp" />

        <Button
            android:id="@+id/divButtonID"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="1sp"
            android:layout_weight="1"
            android:backgroundTint="#3F5AEC"
            android:onClick="myButton"
            android:text="/"
            android:textColor="#ffffff"
            android:textSize="30sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/output"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30sp"
        android:gravity="center"
        android:textColor="#ffffff"
        android:textSize="25sp"
        android:textStyle="bold" />
</LinearLayout>